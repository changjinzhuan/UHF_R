<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.handheld.uhfrdemo.RfidLockActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_head"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/holo_blue_dark"
            android:gravity="center"
            android:text="电子签封测试程序V2.8"
            android:textSize="36sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Spinner
                android:id="@+id/sp_var"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1" />

            <Button
                android:id="@+id/btn_active"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="激活指令"
                android:textSize="24sp" />
        </LinearLayout>

        <Button
            android:id="@+id/btn_demo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="厂家测试程序"
            android:textSize="24sp" />

        <Button
            android:id="@+id/btn_reset"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="重置命令"
            android:textSize="24sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <CheckBox
                android:id="@+id/checkbox_clearnum"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="数量限制"
                android:textSize="18sp" />

            <Button
                android:id="@+id/btn_delete"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:text="日志清除指令"
                android:textSize="24sp" />

        </LinearLayout>

        <Button
            android:id="@+id/btn_recovery"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="恢复指令"
            android:textSize="24sp" />

        <Button
            android:id="@+id/btn_trace"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="读取user区追溯"
            android:textSize="24sp" />
       <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <Button
            android:id="@+id/btn_unlockgetrs"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="开锁写物流"
            android:layout_weight="1"
            android:textSize="24sp" />
           <Button
               android:id="@+id/btn_unlock"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:text="开锁"
               android:layout_weight="1"
               android:textSize="24sp"/>
       </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <Button
            android:id="@+id/btn_lockgetrs"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="关锁写物流"
            android:layout_weight="1"
            android:textSize="24sp" />
        <Button
            android:id="@+id/btn_lock"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="关锁"
            android:layout_weight="1"
            android:textSize="24sp" />
    </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/ev_tracenum"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="1"
                android:inputType="number"
                android:textSize="24sp" />

            <Button
                android:id="@+id/btn_tracecmd"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="追溯命令"
                android:textSize="24sp" />
        </LinearLayout>

        <ScrollView
            android:id="@+id/scroll_info"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_info"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:textSize="18sp" />

            </LinearLayout>
        </ScrollView>

        <Button
            android:id="@+id/button_open"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="关锁"
            android:textSize="36sp"
            tools:visibility="gone" />

        <Button
            android:id="@+id/button_test"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="开锁"
            android:textSize="36sp"
            tools:visibility="gone" />

    </LinearLayout>
</android.support.constraint.ConstraintLayout>
